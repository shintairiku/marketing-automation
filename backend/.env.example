# CORS設定 - カンマ区切りで複数指定可能
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://marketing-automation-three.vercel.app

# OpenAI API
OPENAI_API_KEY=sk-proj-...

# Gemini API（必須）
GEMINI_API_KEY=AIzaSy...

# 他のAPIキーや設定が必要な場合はここに追加
# ANTHROPIC_API_KEY=sk-...

# デフォルトモデル設定 (オプション)
DEFAULT_MODEL="gpt-4o-mini"
RESEARCH_MODEL="gpt-4o-mini"
WRITING_MODEL="gpt-4o-mini"
EDITING_MODEL="gpt-4o-mini"

# レスポンス詳細表示のため
OPENAI_AGENTS_TRACE_INCLUDE_SENSITIVE_DATA=true

# トレーシング有効化
OPENAI_AGENTS_ENABLE_TRACING=true

# SERP API設定
SERP_API_KEY=

# Supabase設定
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Clerk設定（認証用）
CLERK_SECRET_KEY=sk_live_...
CLERK_PUBLISHABLE_KEY=pk_live_...

# Clerk設定 (組織用)
ADMIN_ORGANIZATION_ID=org_...
ADMIN_ORGANIZATION_SLUG=
CLERK_JWT_VERIFICATION_ENABLED=true

# Google Cloud / Vertex AI設定（画像生成用）
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
# サービスアカウントキーをJSON文字列として設定
GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"your-project-id",...}'

# 画像生成モデル設定
IMAGEN_MODEL_NAME=imagen-4.0-generate-preview-06-06
IMAGEN_ASPECT_RATIO=4:3
IMAGEN_OUTPUT_FORMAT=JPEG
IMAGEN_QUALITY=85
IMAGEN_SAFETY_FILTER=block_only_high
IMAGEN_PERSON_GENERATION=allow_all
IMAGEN_ADD_JAPAN_PREFIX=true

# 画像ストレージ設定
IMAGE_STORAGE_PATH=./generated_images

# データベース接続（Supabaseを使用する場合は不要）
# DATABASE_URL=postgresql://username:password@host:5432/dbname

# その他のAPI設定
API_HOST=0.0.0.0
API_PORT=8000

# 環境設定
ENVIRONMENT=production
DEBUG=false